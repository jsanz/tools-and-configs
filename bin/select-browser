#!/bin/sh

SELECTION=$(zenity --info --title='Open With' \
	--text="Select the browser" \
	--ok-label="Cancel" \
	--extra-button="ğŸ“Š ELASTIC" \
	--extra-button="ğŸ  PERSONAL" \
	--extra-button="ğŸ¦ BRAVE")

case $SELECTION in

  "ğŸ“Š ELASTIC")
	BROWSER="firefox -P elastic"
	;;
  "ğŸ  PERSONAL")
	BROWSER="firefox -P personal"
	;;
  "ğŸ¦ BRAVE")
	BROWSER="brave-browser"
    ;;

  *)
    firefox
    ;;
esac

$BROWSER $* &
