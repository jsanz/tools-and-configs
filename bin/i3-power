# Why: provide a confirmation dialog to exit i3, suspend and lock or shutdown
# Require: zenity, i3
# Config: you have to add yourself to the sudo config, to avoid asking for
#         a password for example adding
#
#         youruser ALL=NOPASSWD: /sbin/shutdown
#         youruser ALL=NOPASSWD: /usr/bin/pm-suspend
#

if [ $# -lt 1 ]
then
  echo "Usage: i3-power [exit|suspend|shutdown]"
  exit
fi

case "$1" in

suspend )
  zenity --question --text '¿Suspender el equipo?' --no-wrap
  export shut=$?
  if [ $shut -eq 0 ] ; then
    systemctl suspend
  fi
  ;;
exit )
  zenity --question --text '¿Cerrar sesión?' --no-wrap
  export shut=$?
  if [ $shut -eq 0 ] ; then
    i3-msg exit
  fi
  ;;
shutdown )
  zenity --question --text '¿Apagar el equipo?' --no-wrap
  export shut=$?
  if [ $shut -eq 0 ] ; then
    sudo shutdown -h now  
  fi
  ;;
*) 
  echo "Usage: i3-power [exit|suspend|shutdown]"
  ;;
esac
